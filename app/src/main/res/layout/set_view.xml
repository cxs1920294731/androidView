<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hakim.anview.MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout2">
        <Button
            android:id="@+id/setBu"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:background="@drawable/button"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:text="修改配置" />
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dip">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:id="@+id/interTimeName"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="间隔时间"
                     />
                <TextView
                    android:id="@+id/interTime"
                    android:layout_width="266dp"
                    android:layout_height="match_parent"
                    android:text=""
                   />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
                <TextView
                    android:id="@+id/starTimeName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="起始时间" />
                <TextView
                    android:id="@+id/starTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="" />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:id="@+id/endTimeName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="结束时间" />

                <TextView
                    android:id="@+id/endTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="" />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:id="@+id/textName1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="短信1" />

                <TextView
                    android:id="@+id/text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="" />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:id="@+id/textName2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="短信2" />

                <TextView
                    android:id="@+id/text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="" />
            </TableRow>
        </TableLayout>
        <Button
            android:id="@+id/savePhone"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:background="@drawable/button"
            android:text="导入通讯录"/>
        <ListView
            android:id="@+id/numList"
            android:layout_width="match_parent"
            android:layout_height="262dp" />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginBottom="8dp"
        android:background="#ed4255"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:id="@+id/itemTitle"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:ellipsize="marquee"
            android:gravity="center_horizontal|center"
            android:singleLine="true"
            android:text="设置中心"
            android:textColor="#ffffffff"
            android:textSize="20dp" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
