<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.hakim.anview.MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="0dp"
        android:layout_height="447dp"
        android:layout_marginTop="57dp"
        android:orientation="vertical"
        android:focusable="true"
        android:focusableInTouchMode="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/relativeLayout">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="145dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="136dp"
                    android:layout_height="wrap_content"
                    android:text="起始号码"
                    android:textSize="18dp" />

                <EditText
                    android:id="@+id/StartNum"
                    android:layout_width="131dp"
                    android:gravity="top"
                    android:layout_height="wrap_content"
                    android:lines="1" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:text="终止号码"
                    android:textSize="18dp" />

                <EditText
                    android:id="@+id/EndNum"
                    android:layout_width="137dp"
                    android:layout_height="wrap_content"
                    android:lines="1" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/clearSend"
                    android:layout_width="134dp"
                    android:layout_height="42dp"
                    android:background="@drawable/button"
                    android:text="清除发送记录" />

                <Button
                    android:id="@+id/addSend"
                    android:layout_width="108dp"
                    android:layout_height="42dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/button"
                    android:text="导入数据" />

                <Button
                    android:id="@+id/sendSms"
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:background="@drawable/button"
                    android:text="发送" />
            </TableRow>
        </TableLayout>
        <ListView
            android:id="@+id/listSend"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="#ed4255"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/itemTitle"
            android:layout_width="368dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:ellipsize="marquee"
            android:gravity="center_horizontal|center"
            android:singleLine="true"
            android:text="发送列表"
            android:textColor="#ffffffff"
            android:textSize="20dp"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp" />

        <TextView
            android:id="@+id/lastTimeIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="18dp"
            android:layout_marginRight="18dp"
            android:text="0"
            android:textColor="#ffffffff"
            android:textSize="16dp" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
